datasource db {
  provider = "postgresql"
  url      = env("NETLIFY_PG_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["rhel-openssl-3.0.x"]
  output        = "../functions/generated/client" // Why does this need/use a custom output?
}

model User {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
}
